{
    "version": 2,
    "builds": [
        {
            "src": "index.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "50mb",
                "excludeFiles": ["tests/**", "*.md", ".env*", "__pycache__/**", "*.pyc"]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "index.py"
        }
    ],
    "functions": {
        "index.py": {
            "maxDuration": 30
        }
    }
}